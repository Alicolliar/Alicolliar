{{ template "header" .}}
<div class="postPage">
  <h1>{{ .Post.Title }}</h1>
  <p class="post-subhead"><i>{{ .Post.Subtitle }}</i></p>
  <i>Published {{ .Post.Timestamp.Format "2006 January 02 15:04"}}</i>
  <div> {{ .Post.PostText | markedDown }}</div>
  <p>
    Tags: {{ range.Post.Tags }} <a href="/blog/tags/{{.}}">{{.}}</a
    >,{{ end }}
  </p>
</div>
{{ template "footer" }}
